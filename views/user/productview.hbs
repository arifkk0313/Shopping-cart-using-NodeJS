<script>

    function addToCart(proId) {


        var size = document.querySelector('input[name="size"]:checked').value;
        console.log(proId)
        $.ajax({
            url: '/add-to-cart/' + proId,
            data: {
                size: size

            }
        method: 'get',
            success: (response) => {
                console.log(response)
                if (response.status) {
                    let count = $('#cartcount').html()
                    count = parseInt(count) + 1
                    $('#cartcount').html(count)

                }
                else {
                    location.href = '/login'
                }

            }
        })
    }
</script>
